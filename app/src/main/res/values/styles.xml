<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Toolbar ActionBar主题颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏的颜色  5.0以后-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--系统中，子空间，复选框，单选按钮，选中时的颜色 如checkbox等  5.0以后-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="@style/BaseAppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyButton" parent="Theme.AppCompat.Light">

        <item name="colorControlHighlight">@color/deep_green</item>
        <item name="colorButtonNormal">@color/green</item>

    </style>

    <style name="text_flag_01">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/flag_01</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
